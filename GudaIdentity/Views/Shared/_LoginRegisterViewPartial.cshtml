@using Microsoft.AspNetCore.Identity


@inject SignInManager<IdentityUser> SingInManager
@inject UserManager<IdentityUser> UserManager





<ul class="navbar-nav ml-auto">

    @if(SingInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-white" href=""> Hola, @UserManager.GetUserName(User)</a>
        </li>
        <li class="nav-item">
            <form 
            id="logoutForm" 
            method="post"
            asp-controller="Cuentas"
            asp-action="SalirAplicacion"           
            >   
            <button type="submit" class="btn nav-link"> Salir</button>
            </form>
        </li>
    }
    else
    {
         <li class="nav-item">
             <a class="nav-link text-white" asp-area="" asp-controller="Cuentas" asp-action="Registro">Registro</a>
         </li>
         <li class="nav-item">
             <a class="nav-link text-white" asp-area="" asp-controller="Cuentas" asp-action="Acceso">Acceso</a>
         </li>
    }

    


</ul>


